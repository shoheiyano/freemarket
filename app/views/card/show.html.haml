.wrapper-credit_card_show-kiji
  .main-header
    = render 'items/main-header'
  .mypage_container_kiji
    .mypage__container
      .credit-card
        %h2.credit-card__header
          支払い方法
        .credit-card__form
          .credit-card__form__content
            %p クレジットカード一覧
            .show_card_info
              = "**** **** **** " + @default_card_information.last4
              %br
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
              = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
                %input{ type: "hidden", name: "card_id", value: "" }
                %button.delete_btn 削除する
        .credit-card__link
          %p.link_text 支払い方法について ＞

    .mypage-left
      = render 'profile/mypage-left'
  .banner
    = render 'items/banner'
  .fotter  
    = render 'items/footer'

