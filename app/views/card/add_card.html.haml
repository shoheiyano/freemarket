.wrapper-creditcard_kiji
  .main-header-add_card
    = render 'items/sub-main-header'
  .pankuzu-add_card
    - breadcrumb :card
    = breadcrumbs pretext: "",separator: " &rsaquo; "

  .mypage_container_kiji
    .mypage__container
      .credit-card
        %h2.credit-card__header
          支払い方法
        .credit-card__form
          .credit-card__form__content
            %p クレジットカード一覧
            .credit-card__form__content__add_btn
              = link_to 'クレジットカードを追加する', new_card_path, class:'default_btn_red'
              %i.material-icons.md-36 credit_card
        .credit-card__link
          %p.link_text 支払い方法について ＞
    .mypage-left
      = render 'profile/mypage-left'
  .banner
    = render 'items/banner'
  .fotter  
    = render 'items/footer'