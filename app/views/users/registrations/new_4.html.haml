            %label.label-1 お名前
            %span.span-1 必須
            %input.input-registration-form{ name: "family-name", placeholder: "例)山田", type: "text", value: ""}/
            %input.input-registration-form{ name: "first-name", placeholder: "例)彩", type: "text", value: ""}/
