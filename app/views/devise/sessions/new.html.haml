.user-login-wrapper

  = render "devise/registrations/header-signup"

  .sign-btn-menu
    .sign-up__btn
      .sign-up__new
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", signup_path, class: 'sign-up__link'
      .log-in__menu
        .log-in__btn
          = link_to user_facebook_omniauth_authorize_path, method: :post, class: "log-in__btn log-in__btn--facebook" do
            = fa_icon 'facebook-square', class: "facebook-icon"
            Facebookでログイン
          = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "log-in__btn log-in__btn--google" do
            = image_tag "google-logo-login.png", size:'45x45', class: "google-icon"
            Googleでログイン
      .log-in__mail
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .mail-form
            = f.email_field :email, class: "login-input-text.input-default", placeholder: "メールアドレス"
          .pass-form
            = f.password_field :password, class: "login-input-text.inpu-default", placeholder: "パスワード"
          .no-robot
            %input.no-robot-check{:name => "check", :type => "checkbox"}/          
            %a 私はロボットではありません
            = image_tag "logo_recaptcha.png", size:'30x30', class: "logo_recaptcha"
            .no-robot-text
              %li reCAPTCHA
              %li プライバシー-利用規約
          .log-in__btn
            = f.submit "ログイン"
          .no-password-text
            パスワードをお忘れの方

  = render "devise/registrations/footer-signup"
